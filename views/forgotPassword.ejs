
<%- include('header') %>
<% if (isError) { %>
    <script>
        alert("<%= message %>")
    </script>
<% } %>
<div class="container my-5 p-3">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <h3 class="text-primary text-decoration-underline">Admin Forgot Password</h3>

            <div class="card shadow-5-strong">
                <div class="card-body">
                    <form method="post" action="/admin/forgot-password">
                        <div class="card-text fs-5">
                            Please enter your email to get forgot password email. 
                        </div>
                        <div class="form-row my-2">
                            <label for="email" class="form-label">Email <span class="text-danger fw-bolder">*</span></label>
                            <input type="email" class="form-control form-control-lg" required id="email" name="email" placeholder="Enter your email">
                        </div>
                        
                        <div class="form-row my-3">
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Forgot Password</button>
                        </div>
                        <div class="text-center my-2">
                            Remember password ? <br>
                            <a href="/login">Login</a>
                        </div>
                       
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
