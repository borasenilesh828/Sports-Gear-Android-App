
<%- include('header') %>
<% if (isError) { %>
    <script>
        alert("<%= message %>")
    </script>
<% } %>
<div class="container my-5 p-3">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <h3 class="text-primary text-decoration-underline">Admin Reset Password</h3>

            <div class="card shadow-5-strong">
                <div class="card-body">
                    <form method="post" action="/admin/reset-password">
                        <div class="card-text fs-5">
                           Rest your password from here . 
                        </div>
                        <div class="form-row my-2">
                            <label for="password" class="form-label">Password <span class="text-danger fw-bolder">*</span></label>
                            <input type="password" class="form-control form-control-lg" required id="password" name="password" placeholder="Enter new password">
                        </div>

                        <div class="form-row my-2">
                            <label for="cpassword" class="form-label">Confirm Password <span class="text-danger fw-bolder">*</span></label>
                            <input type="password" class="form-control form-control-lg" required id="cpassword" name="cpassword" placeholder="Enter confirm password">
                        </div>
                        
                        <input type="text" hidden class="form-control form-control-lg" required id="hash" value="<%= hash %>" name="hash">

                        <div class="form-row my-3">
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Reset Password</button>
                        </div>
                        <div class="text-center my-2">
                            Remember password ? <br>
                            <a href="/login">Login</a>
                        </div>
                       
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
