
<%- include('header') %>
<% if (isError) { %>
    <script>
        alert("<%= message %>")
    </script>
<% } %>
<div class="container my-5 p-3">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <h3 class="text-primary">Admin Login</h3>
            <div class="card shadow-5-strong">
                <div class="card-body">
                    <form method="post" action="/admin/login" >

                        <div class="form-row my-2">
                            <label for="email" class="form-label">Email <span class="text-danger fw-bolder">*</span></label>
                            <input type="email" class="form-control form-control-lg" required id="email" name="email" placeholder="Enter your email " autocomplete="off" >
                        </div>
                        
                        <div class="form-row my-2">
                            <label for="password" class="form-label">Password <span class="text-danger fw-bolder">*</span></label>
                            <input type="password" class="form-control form-control-lg" required id="password" name="password" placeholder="Enter your password" autocomplete="off">
                        </div>
                        <div class="form-row text-end my-1">
                            <a class="nav-link text-danger" href="/forgot-password">Forgot Password?</a>
                        </div>
                        <div class="form-row my-3">
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
                        </div>

                        <div class="text-center my-1">
                            Dont't have an account ? <br> <a href="/signup">Signup</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
